bot.on('callback_query', (query) => {
    const chatId = query.message.chat.id;
    const data = query.data;

    if (data === 'myTransactions') {
        const userId = chatId; // –ò—Å–ø–æ–ª—å–∑—É–µ–º chatId –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∫–∞–∫ userId

        // –ß–∏—Ç–∞–µ–º —Ñ–∞–π–ª —Å —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏—è–º–∏
        fs.readFile('transactions.txt', 'utf8', (err, data) => {
            if (err) {
                console.error('–û—à–∏–±–∫–∞ —á—Ç–µ–Ω–∏—è —Ñ–∞–π–ª–∞ —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–π:', err);
                return bot.sendMessage(chatId, '–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑ –ø–æ–∑–∂–µ.');
            }

            const transactions = [];
            const lines = data.split('\n');

            // –ò—â–µ–º —Å–¥–µ–ª–∫–∏, –ø—Ä–∏–≤—è–∑–∞–Ω–Ω—ã–µ –∫ —É–∫–∞–∑–∞–Ω–Ω–æ–º—É userId
            for (let i = 0; i < lines.length; i++) {
                const line = lines[i];
                if (line.startsWith(`ID –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: ${userId}`)) {
                    const transactionNumber = line.split('–ù–æ–º–µ—Ä —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–∏: ')[1];
                    const transactionStatus = line.split('–°—Ç–∞—Ç—É—Å: ')[1];
                    const transaction = `‚Ññ${transactionNumber} (–°—Ç–∞—Ç—É—Å: –æ–∂–∏–¥–∞–Ω–∏–µ –ø—Ä–æ–≤–µ—Ä–∫–∏...)`;
                    transactions.push(transaction);
                }
            }

            // –°–æ–∑–¥–∞–µ–º –∫–ª–∞–≤–∏–∞—Ç—É—Ä—É —Å –∫–Ω–æ–ø–∫–æ–π "–ù–∞–∑–∞–¥"
            const keyboard = {
                inline_keyboard: [
                    [{ text: '–ù–∞–∑–∞–¥', callback_data: 'mainMenu' }]
                ]
            };

            // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ —Å —Å–¥–µ–ª–∫–∞–º–∏ –∏ –∫–ª–∞–≤–∏–∞—Ç—É—Ä–æ–π
            if (transactions.length > 0) {
                bot.sendMessage(chatId, `–í–∞—à–∏ —Å–¥–µ–ª–∫–∏:\n\n${transactions.join('\n')}`, { reply_markup: keyboard });
            } else {
                bot.sendMessage(chatId, '–£ –≤–∞—Å –ø–æ–∫–∞ –Ω–µ—Ç —Å–¥–µ–ª–æ–∫.', { reply_markup: keyboard });
            }

            // –£–¥–∞–ª—è–µ–º –¥–∞–Ω–Ω—ã–µ –∏–∑ —Ñ–∞–π–ª–∞ —á–µ—Ä–µ–∑ –º–∏–Ω—É—Ç—É
            setTimeout(() => {
                fs.writeFile('transactions.txt', '', (err) => {
                    if (err) {
                        console.error('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö –∏–∑ —Ñ–∞–π–ª–∞ —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–π:', err);
                        return;
                    }
                    console.log('–î–∞–Ω–Ω—ã–µ —É—Å–ø–µ—à–Ω–æ —É–¥–∞–ª–µ–Ω—ã –∏–∑ —Ñ–∞–π–ª–∞ —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–π.');
                });
            }, 1500000); // –ó–∞–¥–µ—Ä–∂–∫–∞ –≤ 60000 –º–∏–ª–ª–∏—Å–µ–∫—É–Ω–¥ (1 –º–∏–Ω—É—Ç–∞)
        });
    }
});
