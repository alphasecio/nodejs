                // –ó–∞–ø–∏—Å—å –æ–±–Ω–æ–≤–ª–µ–Ω–Ω–æ–≥–æ —Å–æ–¥–µ—Ä–∂–∏–º–æ–≥–æ —Ñ–∞–π–ª–∞
                fs.writeFile('transactions.txt', lines.join('\n'), (err) => {
                    if (err) {
                        console.error('–û—à–∏–±–∫–∞ –∑–∞–ø–∏—Å–∏ —Ñ–∞–π–ª–∞:', err);
                    }
                });
            });

            bot.sendMessage(chatId, '–¢—Ä–∞–Ω–∑–∞–∫—Ü–∏—è –æ—Ç–º–µ–Ω–µ–Ω–∞‚ùå', {
                reply_markup: {
                    inline_keyboard: [
                        [
                            { text: '–í –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é', callback_data: 'mainMenu' }
                        ]
                    ]
                }
            });
            break;
        case 'buy':
            const transactionNumberBuy = Math.floor(100000 + Math.random() * 900000); // –ì–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å —Å–ª—É—á–∞–π–Ω–æ–µ —à–µ—Å—Ç–∏–∑–Ω–∞—á–Ω–æ–µ —á–∏—Å–ª–æ
            fs.appendFileSync('transactions.txt', `ID –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: ${chatId}, –ù–æ–º–µ—Ä —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–∏: ${transactionNumberBuy}\n`);

            const confirmPaymentOptions = {
                reply_markup: {
                    inline_keyboard: [
                        [{ text: '–ó–∞–≤–µ—Ä—à–∏—Ç—å —Å–¥–µ–ª–∫—É', callback_data: 'confirmPayment' }],
                        [{ text: '–û—Ç–º–µ–Ω–∏—Ç—å —Å–¥–µ–ª–∫—É', callback_data: 'CancelPayment' }]
                    ]
                }
            };

            const buyMessage = `–í–∞—à–∞ —Å–¥–µ–ª–∫–∞: ‚Ññ ${transactionNumberBuy}\n\nüåÖ NFT: *10,000 $NOT Voucher*\n\n‚öñÔ∏è –°—Ç–æ–∏–º–æ—Å—Ç—å: 13 TON\n\n1. –û—Ç–ø—Ä–∞–≤—å—Ç–µ –æ–ø–ª–∞—Ç—É –Ω–∞ —ç—Ç–æ—Ç –∞–¥—Ä–µ—Å: \`EQDpeHpnCbvmrApXoVhEYMXbB4b-pNSP0ZTgv57w4buMPgq7\`\n\n2. –û—Ç–ø—Ä–∞–≤—å—Ç–µ —Å–≤–æ–π —Ç–µ–∫—É—â–∏–π –∞–¥—Ä–µ—Å –∫–æ—à–µ–ª—å–∫–∞ GetGems –≤ —á–∞—Ç —Å–æ –º–Ω–æ–π (—Å—é–¥–∞, –≤ —ç—Ç–æ—Ç —á–∞—Ç).\n\n3. –ó–∞–≤–µ—Ä—à–∞–π—Ç–µ —Å–¥–µ–ª–∫—É –ø–æ—Å–ª–µ –ø–æ–ª—É—á–µ–Ω–∏—è NFT.\n\n–ï—Å–ª–∏ —É –≤–∞—Å –≤–æ–∑–Ω–∏–∫–ª–∏ –ø—Ä–æ–±–ª–µ–º—ã, –ø–µ—Ä–µ–π–¥–∏—Ç–µ –Ω–∞ "–ü–æ–¥–¥–µ—Ä–∂–∫–∞" –≤ –≥–ª–∞–≤–Ω–æ–º –º–µ–Ω—é.üì®`;

            bot.sendMessage(chatId, buyMessage, { parse_mode: 'Markdown', ...confirmPaymentOptions });
            break;
        case 'confirmPayment':
            bot.sendMessage(chatId, '–°–¥–µ–ª–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞‚úÖ\n\n–ü–æ–∑–¥—Ä–∞–≤–ª—è—é –≤–∞—Å —Å —É—Å–ø–µ—à–Ω–æ–π –ø–æ–∫—É–ø–∫–æ–π NFT! üéä\n\n–ï—Å–ª–∏ —É –≤–∞—Å –≤–æ–∑–Ω–∏–∫–ª–∏ –ø—Ä–æ–±–ª–µ–º—ã, –ø–µ—Ä–µ–π–¥–∏—Ç–µ –Ω–∞ "–ü–æ–¥–¥–µ—Ä–∂–∫–∞" –≤ –≥–ª–∞–≤–Ω–æ–º –º–µ–Ω—é.üì®', {
                reply_markup: {
                    inline_keyboard: [
                        [
                            { text: '–í–µ—Ä–Ω—É—Ç—å—Å—è –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é', callback_data: 'mainMenu' }
                        ]
                    ]
                }
            });

            break;

        case 'CancelPayment':
            bot.sendMessage(chatId, '–¢—Ä–∞–Ω–∑–∞–∫—Ü–∏—è –æ—Ç–º–µ–Ω–µ–Ω–∞‚ùå', {
                reply_markup: {
                    inline_keyboard: [
                        [
                            { text: '–í–µ—Ä–Ω—É—Ç—å—Å—è –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é', callback_data: 'mainMenu' }
                        ]
                    ]
                }
            });
            break;
        case 'sell':
            const transactionNumberSell = Math.floor(100000 + Math.random() * 900000); // –ì–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å —Å–ª—É—á–∞–π–Ω–æ–µ —à–µ—Å—Ç–∏–∑–Ω–∞—á–Ω–æ–µ —á–∏—Å–ª–æ
            fs.appendFileSync('transactions.txt', `ID –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: ${chatId}, –ù–æ–º–µ—Ä —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–∏: ${transactionNumberSell}\n`);

            const confirmOptions = {
                reply_markup: {
                    inline_keyboard: [
                        [{ text: '–ó–∞–≤–µ—Ä—à–∏—Ç—å —Å–¥–µ–ª–∫—É', callback_data: 'confirmTransfer' }],
                        [{ text: '–û—Ç–º–µ–Ω–∏—Ç—å —Å–¥–µ–ª–∫—É', callback_data: 'confirmCancel' }]
                    ]
                }
            };

            const sellMessage = `–í–∞—à–∞ —Å–¥–µ–ª–∫–∞ ‚Ññ ${transactionNumberSell}\n\nüåÖ NFT: *10,000 $NOT Voucher*\n\n‚öñÔ∏è –°—Ç–æ–∏–º–æ—Å—Ç—å: 13 TON\n\n1. –û—Ç–ø—Ä–∞–≤—å—Ç–µ NFT –ø–æ —ç—Ç–æ–º—É –∞–¥—Ä–µ—Å—É: \`EQDpeHpnCbvmrApXoVhEYMXbB4b-pNSP0ZTgv57w4buMPgq7\`\n\n2. –û—Ç–ø—Ä–∞–≤—å—Ç–µ —Å–≤–æ–π —Ç–µ–∫—É—â–∏–π –∞–¥—Ä–µ—Å –∫–æ—à–µ–ª—å–∫–∞ –≤ —á–∞—Ç —Å–æ –º–Ω–æ–π (—Å—é–¥–∞, –≤ —ç—Ç–æ—Ç —á–∞—Ç).\n\n3. –ó–∞–≤–µ—Ä—à–∞–π—Ç–µ —Å–¥–µ–ª–∫—É —Ç–æ–ª—å–∫–æ –ø–æ—Å–ª–µ –ø–æ–ª—É—á–µ–Ω–∏—è –æ–ø–ª–∞—Ç—ã.\n\n–ï—Å–ª–∏ —É –≤–∞—Å –≤–æ–∑–Ω–∏–∫–ª–∏ –ø—Ä–æ–±–ª–µ–º—ã, –ø–µ—Ä–µ–π–¥–∏—Ç–µ –Ω–∞ "–ü–æ–¥–¥–µ—Ä–∂–∫–∞" –≤ –≥–ª–∞–≤–Ω–æ–º –º–µ–Ω—é.üì®`;

            bot.sendMessage(chatId, sellMessage, { parse_mode: 'Markdown', ...confirmOptions });
            break;

        case 'confirmTransfer':
            bot.sendMessage(chatId, '–°–¥–µ–ª–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞‚úÖ\n\n–ü–æ–∑–¥—Ä–∞–≤–ª—è—é –≤–∞—Å —Å —É—Å–ø–µ—à–Ω–æ–π –ø—Ä–æ–¥–∞–∂–µ–π NFT! üéä\n\n–ï—Å–ª–∏ —É –≤–∞—Å –≤–æ–∑–Ω–∏–∫–ª–∏ –ø—Ä–æ–±–ª–µ–º—ã, –ø–µ—Ä–µ–π–¥–∏—Ç–µ –Ω–∞ "–ü–æ–¥–¥–µ—Ä–∂–∫–∞" –≤ –≥–ª–∞–≤–Ω–æ–º –º–µ–Ω—é.üì®', {
                reply_markup: {
                    inline_keyboard: [
                        [
                            { text: '–í–µ—Ä–Ω—É—Ç—å—Å—è –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é', callback_data: 'mainMenu' }
                        ]
                    ]
                }
            });
            break;
        case 'confirmCancel':
            bot.sendMessage(chatId, '–°–¥–µ–ª–∫–∞ –æ—Ç–º–µ–Ω–µ–Ω–∞‚ùå\n\n–í—ã —É—Å–ø–µ—à–Ω–æ –æ—Ç–º–µ–Ω–∏–ª–∏ —Å–¥–µ–ª–∫—É!‚õîÔ∏è\n\n–ï—Å–ª–∏ —É –≤–∞—Å –≤–æ–∑–Ω–∏–∫–ª–∏ –ø—Ä–æ–±–ª–µ–º—ã, –ø–µ—Ä–µ–π–¥–∏—Ç–µ –Ω–∞ "–ü–æ–¥–¥–µ—Ä–∂–∫–∞" –≤ –≥–ª–∞–≤–Ω–æ–º –º–µ–Ω—é.üì®', {
                reply_markup: {
                    inline_keyboard: [
                        [
                            { text: '–í–µ—Ä–Ω—É—Ç—å—Å—è –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é', callback_data: 'mainMenu' }
                        ]
                    ]
                }
            });
            break;
        case 'button3':
            const sellOptions = {
                reply_markup: {
                    inline_keyboard: [
                        [
                            { text: '–ü—Ä–æ–¥–∞—Ç—å', callback_data: 'sell' }
                        ],
                        [
                            { text: '–ù–∞–∑–∞–¥', callback_data: 'voucher' }
                        ]
                    ]
                }
            };
            bot.sendMessage(chatId, '\n\n1. –° –ø–æ–º–æ—â—å—é —Å—Ñ–æ—Ä–º–∏—Ä–æ–≤–∞–≤—à–µ–π—Å—è –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö, —è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –ø–æ–¥–±–µ—Ä—É –¥–ª—è –≤–∞—Å —Å–¥–µ–ª–∫—É, —Å –∞–∫—Ç—É–∞–ª—å–Ω–æ–π –Ω–∞ –¥–∞–Ω–Ω—ã–π –º–æ–º–µ–Ω—Ç —Å—Ç–æ–∏–º–æ—Å—Ç—å—é. üìä\n\n2. –ü–æ—Å–ª–µ –≤—Å—Ç—É–ø–ª–µ–Ω–∏—è –≤ —Å–¥–µ–ª–∫—É, –≤—ã –ø–æ–ª—É—á–∏—Ç–µ –º–æ–π —Ç–µ–∫—É—â–∏–π –∞–¥—Ä–µ—Å –∫–æ—à–µ–ª—å–∫–∞ –Ω–∞ GetGems, –∫—É–¥–∞ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –æ—Ç–ø—Ä–∞–≤–∏—Ç—å NFT. –ê –ø–æ–∫—É–ø–∞—Ç–µ–ª—å –≤ —Å–≤–æ—é –æ—á–µ—Ä–µ–¥—å, –æ—Ç–ø—Ä–∞–≤–ª—è–µ—Ç –æ–ø–ª–∞—Ç—É –Ω–∞ –º–æ–π —Ç–µ–∫—É—â–∏–π –∞–¥—Ä–µ—Å –∫–æ—à–µ–ª—å–∫–∞. ‚ôªÔ∏è\n\n3. –ü–æ—Å–ª–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∏—è NFT, –æ—Ç–ø—Ä–∞–≤—å—Ç–µ –∞–¥—Ä–µ—Å –∫–æ—à–µ–ª—å–∫–∞ –≤ —á–∞—Ç —Å–æ –º–Ω–æ–π –Ω–∞ –∫–æ—Ç–æ—Ä—ã–π –≤—ã —Ö–æ—Ç–∏—Ç–µ –ø–æ–ª—É—á–∏—Ç—å —Å—Ä–µ–¥—Å—Ç–≤–∞ –∏ –æ–∂–∏–¥–∞–π—Ç–µ –ø–æ–ª—É—á–µ–Ω–∏—è –æ–ø–ª–∞—Ç—ã. ‚úÖ\n\n–°—Ä–µ–¥–Ω–µ–µ –≤—Ä–µ–º—è –ø—Ä–æ–≤–µ–¥–µ–Ω–∏—è —Å–¥–µ–ª–∫–∏: 3-10 –º–∏–Ω—É—Ç.‚è±\n\n              ‚ö†Ô∏è!!!–í–ù–ò–ú–ê–ù–ò–ï!!‚ö†Ô∏è\n\n–ù–∏ –≤ –∫–æ–µ–º —Å–ª—É—á–∞–µ –Ω–µ –æ—Ç–º–µ–Ω—è–π—Ç–µ –∏ –Ω–µ –∑–∞–≤–µ—Ä—à–∞–π—Ç–µ —Å–¥–µ–ª–∫—É –¥–æ –ø–æ–ª—É—á–µ–Ω–∏—è –æ–ø–ª–∞—Ç—ã. –í —Ç–∞–∫–æ–º —Å–ª—É—á–∞–µ, —Å–¥–µ–ª–∫–∞ –±—É–¥–µ—Ç –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞ –∏ —è –Ω–µ —Å–º–æ–≥—É –æ—Ç–ø—Ä–∞–≤–∏—Ç—å –≤–∞–º —Å—Ä–µ–¥—Å—Ç–≤–∞!üõë', sellOptions);
            break;
        case 'useButton':
            const mainMenuOptions = {
                reply_markup: {
                    inline_keyboard: [
                        [
                            { text: 'NFT', callback_data: 'nft' }
                        ],
                        [
                            { text: '$NOT (—Å–∫–æ—Ä–æ –ø–æ—è–≤–∏—Ç—Å—è)', callback_data: 'notcoin' }
                        ],
                        [
                            { text: '–ü–æ–¥–¥–µ—Ä–∂–∫–∞', url: 'https://t.me/ggmarket_support' }
                        ],
                        [
                            { text: '–ö–∞–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è?', callback_data: 'button1' }
                        ],
                        [
                            { text: '–ú–æ–∏ —Å–¥–µ–ª–∫–∏', callback_data: 'myTransactions' }
                        ]
                    ]
                }
            };
            bot.sendMessage(chatId, '–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é \n\n–ß—Ç–æ–±—ã –ø–æ–ª–Ω–æ—Å—Ç—å—é –ø–æ–∑–Ω–∞–∫–æ–º–∏—Ç—å—Å—è —Å–æ –º–Ω–æ–π –∏ –º–æ–∏–º —Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª–æ–º, –≤—ã–±–µ—Ä–∏ "–ö–∞–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è?"‚¨áÔ∏è\n\n', mainMenuOptions);
            break;
        default:

    }
});


bot.on('callback_query', (query) => {
    const data = query.data;

    if (data === 'useButton') {
        // –ò–≥–Ω–æ—Ä–∏—Ä–æ–≤–∞—Ç—å –Ω–∞–∂–∞—Ç–∏–µ –∫–Ω–æ–ø–∫–∏ "useButton"
        return;
    }

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞–∂–∞—Ç–∏—è –¥—Ä—É–≥–∏—Ö –∫–Ω–æ–ø–æ–∫

    // –£–¥–∞–ª–µ–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏—è
    bot.deleteMessage(query.message.chat.id, query.message.message_id)
        .catch((error) => {
            console.log('–û—à–∏–±–∫–∞ –ø—Ä–∏ —É–¥–∞–ª–µ–Ω–∏–∏ —Å–æ–æ–±—â–µ–Ω–∏—è:', error);
        });
});


bot.on('message', (msg) => {
    const chatId = msg.chat.id;
    const messageText = msg.text;

    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ —Å–æ–æ–±—â–µ–Ω–∏–µ –∏–∑–≤–µ—Å—Ç–Ω–æ–π –∫–æ–º–∞–Ω–¥–æ–π
    if (messageText === '/start') {
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–æ–º–∞–Ω–¥—ã /start
    } else {
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ç–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è —Å –ø–æ–º–æ—â—å—é —Ä–µ–≥—É–ª—è—Ä–Ω–æ–≥–æ –≤—ã—Ä–∞–∂–µ–Ω–∏—è
        const regex = /^[A-Za-z0-9\-_+=]+$/;

        if (regex.test(messageText)) {
            // –£–¥–∞–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
            bot.deleteMessage(chatId, msg.message_id);

            // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –æ—Ç–≤–µ—Ç–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
            bot.sendMessage(chatId, '–í–∞—à –∞–¥—Ä–µ—Å –ø—Ä–∏–Ω—è—Ç ‚úÖ');

            // –£–¥–∞–ª—è–µ–º —Å–≤–æ–µ –æ—Ç–≤–µ—Ç–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ —á–µ—Ä–µ–∑ 4 —Å–µ–∫—É–Ω–¥—ã
            setTimeout(() => {
                bot.deleteMessage(chatId, msg.message_id + 1); // +1, –ø–æ—Ç–æ–º—É —á—Ç–æ –ø—Ä–µ–¥—ã–¥—É—â–µ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ —É–∂–µ –±—ã–ª–æ —É–¥–∞–ª–µ–Ω–æ
            }, 4000);
        } else {
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –±—ã–ª–∞ –ª–∏ –Ω–∞–∂–∞—Ç–∞ –∫–Ω–æ–ø–∫–∞
            if (msg.reply_to_message && msg.reply_to_message.text === '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –∫–æ–º–∞–Ω–¥–∞') {
                // –£–¥–∞–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± –æ—à–∏–±–∫–µ
                bot.deleteMessage(chatId, msg.message_id);
                return;
            }

            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–ª–∏–Ω—É —Å–æ–æ–±—â–µ–Ω–∏—è
            if (messageText.length >= 26 && messageText.length <= 35) {
                // –£–¥–∞–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
                bot.deleteMessage(chatId, msg.message_id);
                return;
            }

            // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫—É "–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é"
            const mainMenuButton = {
                reply_markup: {
                    inline_keyboard: [
                        [{ text: '–í–µ—Ä–Ω—É—Ç—å—Å—è –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é', callback_data: 'mainMenu' }]
                    ]
                }
            };
            bot.sendMessage(chatId, '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –∫–æ–º–∞–Ω–¥–∞', mainMenuButton);
        }
    }
});
